{
  "compilerOptions": {
    "outDir": "dist/server",
    "rootDir": "server",
    "module": "es2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@server/*": ["./server/*"]
    }
  },
  "include": ["server/**/*.ts"]
}
